<div class="card-body">
  <%= form_with(model: institution, local: true) do |form| %>
    <% if institution.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(institution.errors.count, "error") %> prohibited this institution from being saved:</h2>

        <ul>
          <% institution.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :name, class: 'col-sm-2 col-form-label col-form-label-sm' %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control form-control-sm', placeholder: :name %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :mascot, class: 'col-sm-2 col-form-label col-form-label-sm' %>
      <div class="col-sm-10">
        <%= form.text_field :mascot, class: 'form-control form-control-sm', placeholder: :mascot %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :application_deadline, class: 'col-sm-2 col-form-label col-form-label-sm' %>
      <div class="col-sm-10">
        <%= form.text_field :application_deadline, class: 'form-control form-control-sm datepicker' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :essay_prompt, class: 'col-sm-2 col-form-label col-form-label-sm' %>
      <div class="col-sm-10">
        <%= form.text_area :mascot, class: 'form-control form-control-sm', placeholder: :essay_prompt %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :location, class: 'col-sm-2 col-form-label col-form-label-sm' %>
      <div class="col-sm-10">
        <%= form.text_field :location, class: 'form-control form-control-sm', placeholder: :location %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= form.button "<i class='fas fa-save'></i> #{t('defaults.submit', model: t('.resource'))}".html_safe,
                        class: 'btn btn-primary btn-flat', type: 'submit', title: t('defaults.submit') %>
      </div>
    </div>
  <% end %>
</div>

<div class="card-footer">
  <%= link_to "<i class='fas fa-list-ul'></i> #{t('institutions.index.title')}".html_safe, institutions_path,
              class: 'btn btn-sm btn-secondary btn-flat', title: t('.institutions_list') %>
</div>

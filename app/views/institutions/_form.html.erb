<div class="card-body">
  <%= form_for(institution, class: 'form-horizontal', validate: true) do |form| %>
    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :name, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control form-control-sm', placeholder: :name, autofocus: true %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :location, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.select :location, us_state_to_cities,
                        {include_blank: t('defaults.select')}, {class: 'custom-select form-control select-two'} %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :mascot, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.text_field :mascot, class: 'form-control form-control-sm', placeholder: :mascot %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :application_deadline, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.text_field :application_deadline, class: 'form-control form-control-sm datepicker',
                            placeholder: 'Eg. 2018-05-12'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :essay_prompt, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.text_area :essay_prompt, class: 'form-control form-control-sm', placeholder: :essay_prompt %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">
        <%= form.label :notes, class: 'col-form-label col-form-label-sm' %>
      </div>
      <div class="col-sm-10">
        <%= form.text_area :notes, class: 'form-control form-control-sm', placeholder: :notes %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= form.button "<i class='fas fa-save'></i> #{t('defaults.submit', model: t('.resource'))}".html_safe,
                        class: 'btn btn-primary btn-flat', type: 'submit', title: t('defaults.submit') %>
      </div>
    </div>
  <% end %>
</div>

<div class="card-footer">
  <%= link_to "<i class='fas fa-list-ul'></i> #{t('institutions.index.title')}".html_safe, institutions_path,
              class: 'btn btn-sm btn-secondary btn-flat', title: t('.institutions_list') %>
</div>

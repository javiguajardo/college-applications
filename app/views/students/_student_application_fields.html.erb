<fieldset>
  <legend><%= t('.application') %></legend>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label t('.institution'), class: 'col-form-label col-form-label-sm' %>
    </div>
    <div class="col-sm-10">
      <%= f.select :institution_id, institutions_for_select,
                             {include_blank: t('defaults.select')}, {class: 'custom-select form-control select-two'} %>
    </div>
  </div>
  <div class="form-group row float-right">
    <div class="col-sm-2">
      <%= f.hidden_field :_destroy %>
      <%= link_to t('.remove'), 'javascript:;', class: 'remove_fields btn btn-danger btn-sm btn-flat',
                  title: t('.remove') %>
    </div>
  </div>
</fieldset>
